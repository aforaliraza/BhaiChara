<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:layout_weight="1.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/driver_car"
            android:id="@+id/pic_marker_info"
            android:background="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.7"
        android:background="#FFFF00">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/drivers_name_marker"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/car_type_marker"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_below="@+id/drivers_name_marker"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/car_number_marker"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/car_type_marker"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/seats_available_marker"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/car_number_marker"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>

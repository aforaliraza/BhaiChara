<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="67"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterCityRiderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/bhaichara_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:background="@color/green"
            android:text="Bhai Chara"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_height="0dp">


    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:layout_height="0dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radio_group_vehicle_type">
            <RadioButton
                android:id="@+id/motorbike_vehicledetails_radio_button"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_gravity="center_horizontal"
                android:text="Motor Cycle"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/car_vehicledetails_radio_button"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_gravity="center_horizontal"
                android:text="Car"
                android:textSize="20sp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:layout_height="0dp">
        <EditText
            android:gravity="center"
            android:id="@+id/cartype_vehicledetails_activity"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:textColor="@color/appcolordark"
            android:hint="Car Type"
            android:inputType="text"
            android:textSize="17sp"

            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:layout_height="0dp">
        <EditText
            android:gravity="center"
            android:id="@+id/vehiclenumber_vehicledetails_activity"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:textColor="@color/appcolordark"
            android:hint="Vehicle Number"
            android:inputType="text"
            android:textSize="17sp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="10"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                android:id="@+id/add_carcapacity_vehicledetails_iv">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:text="0"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carcapacity_vehicledetails_tv"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/minus"
                android:id="@+id/deduct_carcapacity_vehicledetails_iv"
                ></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:layout_height="0dp">
        <EditText
            android:gravity="center"
            android:id="@+id/source_vehicledetails_activity"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:textColor="@color/appcolordark"
            android:hint="Source"
            android:inputType="text"
            android:textSize="17sp"

            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:layout_height="0dp">
        <EditText
            android:gravity="center"
            android:id="@+id/destination_vehicledetails_activity"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:textColor="@color/appcolordark"
            android:hint="Destination"
            android:inputType="text"
            android:textSize="17sp"

            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">

        <Button
            android:id="@+id/addvehicle_vehicledetails_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Vehicle"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/green"/>
    </LinearLayout>

</LinearLayout>


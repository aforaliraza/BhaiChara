<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/clockblack"
        android:layout_marginTop="20dp"
        android:id="@+id/phoneNumberholderTransactionAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Phone Number"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/clockblack"
        android:layout_height="30dp"
        android:src="@drawable/clockblack"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        />



    <TextView

        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:id="@+id/phoneNumberTransactionHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:hint="Amount"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        />
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/dollar"
        android:layout_height="30dp"
        android:src="@drawable/dollar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/clockblack"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="33dp"
        android:layout_toRightOf="@id/dollar"
        android:id="@+id/amountholderTransactionAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Phone Number"
        android:textColor="@color/black"
        android:layout_below="@id/phoneNumberTransactionHistory"/>

    <TextView

        android:layout_marginRight="10dp"
        android:layout_marginTop="33dp"
        android:id="@+id/amountTransactionHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:hint="Amount"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:layout_below="@id/phoneNumberTransactionHistory"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/amountholderTransactionAdapter"
        android:layout_marginTop="29dp"/>

</RelativeLayout>